{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./functions/node_modules/@types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@supabase/supabase-js": ["./functions/node_modules/@supabase/supabase-js"]
    }
  },
  "include": ["functions/**/*"],
  "exclude": ["node_modules"]
}

